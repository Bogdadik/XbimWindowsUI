<UserControl x:Class="Xbim.Presentation.IfcMetaDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Xbim.Presentation"
             xmlns:l="clr-namespace:Xbim.LocalizationHelper;assembly=Xbim.LocalizationHelper"
             >
    <UserControl.Resources>
        <Style TargetType="{x:Type Hyperlink}" x:Key="HyperlinkStyle">
            <EventSetter Event="RequestNavigate" Handler="Hyperlink_RequestNavigate"/>
        </Style>
        <l:LocalizationHelper x:Key="helper"></l:LocalizationHelper>
    </UserControl.Resources>
    <TabControl Background="#114682d4" x:Name="TheTabs">
        <TabItem x:Name="ObjectTab"
                 Header="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Object]}">
            <Grid>
                <CheckBox Margin="3"
				          Height="20"
				          VerticalAlignment="Top"
				          x:Name="ChkVerbose"
				          Checked="CheckBoxChanged"
				          Unchecked="CheckBoxChanged"
                          Content="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Verbose]}" />
                <Button x:Name="BtnBack" IsEnabled="False" Click="Back" Content="&lt;-" HorizontalAlignment="Right" Width="20" VerticalAlignment="Top" Height="20" Margin="3" />
                <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=ObjectGroups}"
				          Margin="0,27,0,0"
				          ToolTip="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.AttributesOfTheObject]}"
				          AutoGenerateColumns="False"
				          HeadersVisibility="None"
				          BorderThickness="0"
				          SelectionMode="Single"
				          GridLinesVisibility="Horizontal"
				          HorizontalGridLinesBrush="#3F000000"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Image"
						                        Width="SizeToCells"
						                        IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}"
									           Margin="5,0"
									           FontWeight="Bold" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="ffff"
						                        Width="*"
						                        IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl>
                                        <ContentControl.Style>
                                            <Style TargetType="{x:Type ContentControl}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsLabel}"
													             Value="false">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate>
                                                                    <TextBox Text="{Binding Path=Value}"
																	         Margin="2,0"
																	         IsReadOnly="True"
																	         BorderThickness="0" />
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=IsLabel}"
													             Value="true">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBox Text="{Binding Path=Value}"
																		         Margin="2,0"
																		         IsReadOnly="True"
																		         BorderThickness="0" />
                                                                        <TextBlock Grid.Column="1">
																			<Hyperlink NavigateUri="{Binding Path=IfcUri}"
																			           Style="{Binding Source={StaticResource HyperlinkStyle}}">
																				<TextBlock Text=" #" />
																				<TextBlock Text="{Binding Path=IfcLabel}"/>
																			</Hyperlink>
																		</TextBlock>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Path=PropertySetName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander IsExpanded="True">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Path=Name}"
															           Foreground="Blue" />
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter />
                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem x:Name="TypeTab"
                 Visibility="Collapsed"
		         Header="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Type]}">
            <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=TypeProperties}"
			          ToolTip="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.AttributesOfTheObject]}"
			          AutoGenerateColumns="False"
			          HeadersVisibility="None"
			          BorderThickness="0"
			          SelectionMode="Single"
			          GridLinesVisibility="Horizontal"
			          HorizontalGridLinesBrush="#3F000000">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image"
					                        Width="SizeToCells"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
								           Margin="5,0"
								           FontWeight="Bold" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ffff"
					                        Width="*"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Value}"
								         Margin="5,0"
								         IsReadOnly="True"
								         BorderThickness="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
        <TabItem x:Name="MaterialTab"
                 Header="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Materials]}">
            <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=MaterialGroups}"
			          ToolTip="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.AttributesOfTheObject]}"
			          AutoGenerateColumns="False"
			          HeadersVisibility="None"
			          BorderThickness="0"
			          SelectionMode="Single"
			          GridLinesVisibility="Horizontal"
			          HorizontalGridLinesBrush="#3F000000">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image"
					                        Width="SizeToCells"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
								           Margin="5,0"  />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ffff"
					                        Width="*"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Value}"
								         Margin="5,0"
								         IsReadOnly="True"
								         BorderThickness="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Path=PropertySetName}"  />
                                </StackPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Path=Name}"
														           FontWeight="Bold" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </DataGrid.GroupStyle>
            </DataGrid>
        </TabItem>
        <TabItem x:Name="PropertyTab"
                 Header="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Properties]}">
            <DataGrid Name="PropertiesGrid"
			          ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=PropertyGroups}"
			          ToolTip="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.AttributesOfTheObject]}"
			          AutoGenerateColumns="False"
			          HeadersVisibility="None"
			          BorderThickness="0"
			          SelectionMode="Single"
			          GridLinesVisibility="Horizontal"
			          HorizontalGridLinesBrush="#3F000000">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image"
					                        Width="SizeToCells"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
								           Margin="5,0"
								           FontWeight="Bold" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ffff"
					                        Width="*"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Value}"
								         Margin="5,0"
								         IsReadOnly="True"
								         BorderThickness="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Path=PropertySetName}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Path=Name}"
														           Foreground="Blue" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </DataGrid.GroupStyle>
            </DataGrid>
        </TabItem>
        <TabItem x:Name="QuantityTab"
                 Header="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.Quantities]}">
            <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=Quantities}"
			          ToolTip="{Binding Source={StaticResource helper}, Path=[XbimPresentationResource.AttributesOfTheObject]}"
			          AutoGenerateColumns="False"
			          HeadersVisibility="None"
			          BorderThickness="0"
			          SelectionMode="Single"
			          GridLinesVisibility="Horizontal"
			          HorizontalGridLinesBrush="#3F000000">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image"
					                        Width="SizeToCells"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
								           Margin="5,0"
								           FontWeight="Bold" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ffff"
					                        Width="*"
					                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Value}"
								         Margin="5,0"
								         IsReadOnly="True"
								         BorderThickness="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
    </TabControl>
</UserControl>
